<%- include('partials/header') -%>

<h1>Workouts</h1>
    <h2><%= user.userName %></h2>

    <div class="flex flex-col items-center">
        <h3 class="">Completed Workouts</h3>
       
        <div class="stats-horizontal shadow">
  
            <div class='exercise stat flex flex-col items-center'>
                <div class="stat-title"><%= exercisePost.exercise %></div>
                    <div scope="row"><%= exercisePost.date.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: '2-digit' }); %></div>
                <div class="stat flex">
                    <div class="flex flex-col items-center">
                        <div class="stat-value"><%= exercisePost.reps %></div>
                        <div class="stat-desc">Reps</div>
                    </div>
                    <div class="flex flex-col items-center">
                        <div class="stat-value"><%= exercisePost.sets %></div>
                        <div class="stat-desc">Sets</div>
                    </div>
                    <div class="flex flex-col items-center">
                        <div class="stat-value"><%= exercisePost.weight %></div>
                        <div class="stat-desc">Weight</div>
                    </div>
                </div>
                    <div class="stat"><%= exercisePost.notes %></div>
            </div>
            <form
            action="/calendar/deleteWorkout/<%= exercisePost.id %>?_method=DELETE"
            method="POST"
            class="col-3">
                <button class="btn fa fa-trash" type="submit">Delete</button>
            </form>
    </div>

<%- include('partials/footer') -%>