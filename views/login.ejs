<%- include('partials/header') -%>

    <div class="d-flex flex-column bg-light align-items-center m-3 rounded-2">
        <h1 class="mt-3">Log In</h1>
        <img src="/public/img/log-in.svg" alt="fitness" class="workout-img m-3">

        <form action="/login" method="POST" class="d-flex flex-column">
            <input class="mt-2" type="email" name="email" placeholder="Email">
                <% if (locals.messages.errors) { %>
                    <% messages.errors.forEach( el => { %>
                        <div class="alert alert-danger"><%= el.msg %></div>
                    <% }) %>    
                <% } %>
            <input class="mt-2" type="password" name="password" placeholder="Password">
                <% if (locals.messages.info) { %>
                    <% messages.info.forEach( el => { %>
                        <div class="alert alert-danger"><%= el.msg %></div>
                    <% }) %>    
                <% } %>
            <input type="submit" class="btn btn-primary m-4">
        </form>
    </div>

<%- include('partials/footer') -%>